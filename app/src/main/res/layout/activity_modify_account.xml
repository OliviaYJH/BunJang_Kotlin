<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".src.main.my.setting.account.add.bottomDialog.modify.ModifyAccountActivity">

    <LinearLayout
        android:id="@+id/linear_setting_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="계좌 수정"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_close"
            app:tint="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_add_account_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@drawable/bottom_border_gray">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/account_holder"
            android:layout_weight="1"
            android:textSize="@dimen/add_account_text"
            />
        <EditText
            android:id="@+id/et_account_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingBottom="20dp"
            android:layout_gravity="center"
            android:textSize="@dimen/add_account_text"
            android:hint="@string/account_holder_write"
            android:layout_weight="4"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_add_account_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="20dp"
        android:background="@drawable/bottom_border_gray">

        <TextView
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/select_bank"
            android:textSize="@dimen/add_account_text" />

        <TextView
            android:id="@+id/et_account_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingBottom="20dp"
            android:layout_gravity="center"
            android:textSize="@dimen/add_account_text"
            android:hint="@string/select_bank"
            android:layout_weight="4"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_add_account_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="20dp"
        android:background="@drawable/bottom_border_gray">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/account_number"
            android:layout_weight="1"
            android:textSize="@dimen/add_account_text"
            />
        <EditText
            android:id="@+id/et_account_number"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingBottom="20dp"
            android:layout_gravity="center"
            android:textSize="@dimen/add_account_text"
            android:hint="@string/write_number"
            android:layout_weight="4"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_modify_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수정 완료"
        android:background="@color/my_event"
        android:textColor="@color/white"
        android:textStyle="bold"/>


</LinearLayout>