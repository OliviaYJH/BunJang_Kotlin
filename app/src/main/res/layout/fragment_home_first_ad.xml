<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.home.ad.firstAd.HomeFirstAdFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_ad_first"
        >

        <ImageView
            android:id="@+id/iv_ad_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/main_fragment_margin_top"
            android:src="@drawable/iv_ad_1" />

        <TextView
            android:id="@+id/tv_ad_1_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_ad_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="@string/home_ad_first_small"
            android:textColor="@color/home_ad_first_small"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tv_ad_1_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/home_ad_first_large"
            android:layout_below="@+id/tv_ad_1_small"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

</FrameLayout>