<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.add.category.bag.BagFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@color/category_light_gray">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/category_title_height"
                android:text="@string/bag_category"
                android:textColor="@color/category_title"
                android:textStyle="bold"
                android:gravity="bottom"
                android:paddingLeft="@dimen/category_left"
                android:paddingBottom="5dp"
                android:textSize="@dimen/category_title"/>
            <LinearLayout
                android:id="@+id/woman_bag"
                android:layout_width="match_parent"
                android:layout_height="@dimen/category_title_height"
                android:orientation="horizontal"
                android:background="@color/white">
                <ImageView
                    android:layout_width="@dimen/category_icon"
                    android:layout_height="@dimen/category_icon"
                    android:src="@drawable/ic_bag"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/category_left"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="여성가방"
                    android:textSize="@dimen/category_list"
                    android:textColor="@color/category_list"
                    android:drawablePadding="@dimen/category_drawable_padding"
                    android:layout_marginLeft="@dimen/category_left"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/man_bag"
                android:layout_width="match_parent"
                android:layout_height="@dimen/category_title_height"
                android:orientation="horizontal"
                android:background="@color/white">
                <ImageView
                    android:layout_width="@dimen/category_icon"
                    android:layout_height="@dimen/category_icon"
                    android:src="@drawable/ic_bag"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/category_left"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="남성가방"
                    android:textSize="@dimen/category_list"
                    android:textColor="@color/category_list"
                    android:drawablePadding="@dimen/category_drawable_padding"
                    android:layout_marginLeft="@dimen/category_left"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/travel_bag"
                android:layout_width="match_parent"
                android:layout_height="@dimen/category_title_height"
                android:orientation="horizontal"
                android:background="@color/white">
                <ImageView
                    android:layout_width="@dimen/category_icon"
                    android:layout_height="@dimen/category_icon"
                    android:src="@drawable/ic_bag"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/category_left"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="여행용"
                    android:textSize="@dimen/category_list"
                    android:textColor="@color/category_list"
                    android:drawablePadding="@dimen/category_drawable_padding"
                    android:layout_marginLeft="@dimen/category_left"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>