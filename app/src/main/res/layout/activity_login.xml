<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".src.login.LoginActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearlayout_login"/>

    <LinearLayout
        android:id="@+id/linearlayout_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_kakao_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ic_indicator1"
            android:layout_width="@dimen/indicator_icon"
            android:layout_height="@dimen/indicator_icon"
            android:layout_marginRight="@dimen/indicator_margin"
            android:src="@drawable/ic_circle_black"/>
        <ImageView
            android:id="@+id/ic_indicator2"
            android:layout_width="@dimen/indicator_icon"
            android:layout_height="@dimen/indicator_icon"
            android:layout_marginRight="@dimen/indicator_margin"
            android:src="@drawable/ic_circle_gray"/>
        <ImageView
            android:id="@+id/ic_indicator3"
            android:layout_width="@dimen/indicator_icon"
            android:layout_height="@dimen/indicator_icon"
            android:layout_marginRight="@dimen/indicator_margin"
            android:src="@drawable/ic_circle_gray"/>
        <ImageView
            android:id="@+id/ic_indicator4"
            android:layout_width="@dimen/indicator_icon"
            android:layout_height="@dimen/indicator_icon"
            android:src="@drawable/ic_circle_gray"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_kakao_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_other_login"
        android:layout_centerInParent="true"
        android:layout_marginLeft="65dp"
        android:background="@drawable/btn_kakao_login"
        android:drawableLeft="@drawable/iv_kakao_login"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="50dp"
        android:stateListAnimator="@null"
        android:text="@string/kakao_login"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_other_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="90dp"
        android:text="@string/other_login"
        android:textColor="@color/colorGray"
        android:textSize="14dp" />


</RelativeLayout>